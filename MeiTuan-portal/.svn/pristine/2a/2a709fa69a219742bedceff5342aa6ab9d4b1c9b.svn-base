/*左边的导航栏*/
#naviY{
	height:450px;
}
#naviX{
	position:absolute;
	left:40px;
	top:650px;
}
#naviX img{
	height:48px;
}
#naviX li{
	margin-top:1px;
}
#navigation{
	float:left;
	margin-top:100px;
}
#content{
	float:left;
	width:65%;
	height:400px;
	margin:10px 20px;
}
.rest {
	margin:15px 42px;
	display:inline-block;
	width:200px;
	box-sizing: content-box;
	
}
.rest:hover{
	box-shadow: 0.5px 0.5px 2px;
}
.rest img{
	width:200px;
	border:0.5px solid rgb(180,180,180);
}
.rest div{
	color:rgb(160,160,160);
	font-size:0.7em;
}
.rest>span{
	font-size:0.9em;
	color:rgb(80,80,80);
	margin-top:5px;
	maring-bottom:5px;
	margin-bottom:5px;
	display:block;
}
#change{
	margin:20px auto;
	text-align: center;
}
#change a{
	display:inline-block;
	width:65px;
	height:30px;
}
#change a:hover{
	color:rgb(255,140,0);
}
#mine{
	width:100px;
}
#mine a{
	color:rgb(255,255,255);
}
.top_ul_li_align{
	vertical-align: top;
}
#top_ul a:hover{
	color:rgb(255,140,0);
}
#top_ul_li_ul{
	text-align:center;
	background-color:rgb(70,70,70);
	margin-top:-1px;
}
#top_ul_li_ul li:first-child{
	height:25px;
}